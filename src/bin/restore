#!/usr/bin/env python3
from utility import GCBackup
import sys

if __name__ == '__main__':
    if (len(sys.argv)) > 2 or (len(sys.argv) == 2 and sys.argv[1] != "--force"):
        print(f"Usage: {sys.argv[1]} [--force]")
        sys.exit(1)
    
    gcb = GCBackup()
    gcb.restore_from_backup(force=(len(sys.argv) == 2))
